<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SalonAppointment" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <color name="colorAccent">#FF4081</color>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white  </item>
        <item name="materialButtonStyle">@style/mainButton</item>
    </style>

    <style name="mainButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_dark</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>