<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="30dp"
        android:elevation="5dp"
        android:padding="15dp"
        app:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/regSched_Num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="No."
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/regSched_tvStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="70dp"
                android:layout_toRightOf="@+id/regSched_Num"
                android:text="To"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/regSched_dash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/regSched_tvStart"
                android:text="-"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/regSched_tvEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/regSched_dash"
                android:text="From"
                android:textSize="25dp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>