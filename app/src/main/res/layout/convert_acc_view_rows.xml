<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/convertAcc_cv"
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/convertAcc_Profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_profile_one" />

            <TextView
                android:id="@+id/convertAcc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:text="Name:" />

            <TextView
                android:id="@+id/convertAcc_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/convertAcc_name"
                android:text="Name" />

            <TextView
                android:id="@+id/convertAcc_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/convertAcc_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:text="Email:" />

            <TextView
                android:id="@+id/convertAcc_Email1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/convertAcc_name1"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/convertAcc_Email"
                android:text="Email" />

            <TextView
                android:id="@+id/convertAcc_UserType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/convertAcc_Email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Type: " />

            <TextView
                android:id="@+id/convertAcc_UserType1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/convertAcc_Email1"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/convertAcc_UserType"
                android:text="Type" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>