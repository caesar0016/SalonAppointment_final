<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.registerData"
    style="@style/bg_home">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/dpAppointtopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/dpAppoint_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <ImageView
                android:id="@+id/dpAppoint_bck"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Navigate Back"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Add Sample Data"
                android:textSize="18dp" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:layout_centerInParent="true"
        >
        <Button
            android:id="@+id/register_btnDataService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Service"
            />
        <Button
            android:id="@+id/register_btnDataAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Account"
            />
        <Button
            android:id="@+id/register_btnDataSched"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Schedule"
            />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/registerProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
</RelativeLayout>