<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_notif"
                android:id="@+id/vrNotifMain"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:layout_toRightOf="@+id/vrNotifMain"
                android:layout_marginTop="5dp"
                android:id="@+id/vrNotifDate"
                android:textSize="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Automatic Notification"
                android:layout_below="@+id/vrNotifDate"
                android:layout_marginTop="0dp"
                android:textStyle="bold"
                android:id="@+id/rvNotif_Title"
                android:layout_toRightOf="@+id/vrNotifMain"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Message"
                android:layout_below="@+id/rvNotif_Title"
                android:layout_marginTop="8dp"
                android:id="@+id/rvNotif_Message"
                android:textSize="11dp"
                android:layout_toRightOf="@+id/vrNotifMain"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>