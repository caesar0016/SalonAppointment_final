<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark">
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="315dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="260dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_haircut_male"
                android:scaleType="fitXY"
                android:id="@+id/img_servicevr_dpService"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Name"
                android:layout_below="@+id/img_servicevr_dpService"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/tv_servicevr_serviceName"
                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Please add your content here.
                                Keep it short and simple."
                android:layout_below="@+id/tv_servicevr_serviceName"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/tv_servicevr_serviceDescription"
                android:textSize="13dp"
                android:maxLines="4"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:layout_toRightOf="@+id/btnServicevr_seeMore"
                android:layout_below="@+id/tv_servicevr_serviceDescription"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="27dp"
                android:id="@+id/tv_servicevr_price"
                android:textColor="#FF0000"
                android:textSize="18dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_servicevr_serviceDescription"
                android:text="See more"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/btnServicevr_seeMore"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>