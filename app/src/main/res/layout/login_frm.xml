<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginFrm"
    android:background="@color/bg_dark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/loginFrm_WelcomeBack"
        android:background="@color/bg_purple">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back!"
            android:textSize="35dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/u_Signup"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:layout_marginBottom="30dp"
            android:id="@+id/signupFrm_loginDirect"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/loginFrm_WelcomeBack"
        android:layout_marginTop="90dp"
        android:id="@+id/ll_signUpFrm_signUpDetails"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/box"
            android:hint="Email"
            android:textColorHint="@color/white"
            android:padding="15dp"
            android:id="@+id/etv_loginFrm_Email"
            android:inputType="textEmailAddress"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/box"
            android:hint="Password"
            android:textColorHint="@color/white"
            android:padding="15dp"
            android:id="@+id/etv_loginFrm_Password"
            android:inputType="textEmailAddress"
            android:layout_marginTop="15dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="25dp"
            android:id="@+id/btn_loginFrm_Login"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="----------------     Or login Using     ----------------"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="100dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_signUpFrm_signUpDetails"
        android:layout_marginTop="30dp"
        android:id="@+id/ll_loginFrm_LoginButton"
        android:layout_marginHorizontal="40dp">

    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_google"
        android:id="@+id/img_loginFrm_icGoogle"
        android:layout_below="@+id/ll_signUpFrm_signUpDetails"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="0dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google"
        android:textColor="@color/white"
        android:layout_below="@+id/img_loginFrm_icGoogle"
        android:layout_marginLeft="43dp"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_ig"
        android:id="@+id/img_LoginFrm_icInstagram"
        android:layout_below="@+id/ll_signUpFrm_signUpDetails"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="0dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instagram"
        android:textColor="@color/white"
        android:layout_below="@+id/img_loginFrm_icGoogle"
        android:layout_marginLeft="170dp"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_fb"
        android:id="@+id/img_LoginFrm_icTwitter"
        android:layout_below="@+id/ll_signUpFrm_signUpDetails"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="330dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="0dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook"
        android:textColor="@color/white"
        android:layout_below="@+id/img_loginFrm_icGoogle"
        android:layout_marginLeft="320dp"
        />
</RelativeLayout>