<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginFrm">

    <LinearLayout
        android:id="@+id/loginFrm_WelcomeBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="Welcome Back!"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/signupFrm_loginDirect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="@string/u_Signup"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_signUpFrm_signUpDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginFrm_WelcomeBack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/box"
            app:startIconDrawable="@drawable/ic_mail"
            app:startIconTint="@color/darkPink">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etv_loginFrm_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="         Enter Email"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/box"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/darkPink"
            app:startIconDrawable="@drawable/baseline_lock_outline_24"
            app:startIconTint="@color/darkPink">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etv_loginFrm_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="         Enter Password"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_loginFrm_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/pink"
            android:text="Login" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="----------------     Or login Using     ----------------" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_loginFrm_LoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_signUpFrm_signUpDetails"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

    </LinearLayout>

    <ImageView
        android:id="@+id/img_loginFrm_icGoogle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ll_signUpFrm_signUpDetails"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/ic_google" />

    <ImageView
        android:id="@+id/img_LoginFrm_icInstagram"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ll_signUpFrm_signUpDetails"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/ic_ig" />

    <ImageView
        android:id="@+id/img_LoginFrm_icFacebook"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ll_signUpFrm_signUpDetails"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/ic_fb" />

</RelativeLayout>